{
  "manifest_version": 3,
  "name": "Memeings Assistant",
  "version": "1.0",
  "description": "Generate images from selected text with Firebase authentication",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "clipboardWrite",
    "contextMenus",
    "activeTab",
    "identity"
  ],
  "host_permissions": [
    "https://memeings.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["auth_callback.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
